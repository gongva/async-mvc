<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:background="@drawable/bg_home_car_license"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_logo_white"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="贵阳市机动车电子行驶证"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_banner_car_license_plate_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贵AN83JD8"
                android:textColor="#ffffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_banner_car_license_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆类型：小型轿车"
                android:textColor="#ffffffff"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="13dp"
                android:text="发证日期"
                android:textColor="#ffc9deff"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_banner_car_license_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:text="2018-12-25"
                android:textColor="#ffc9deff"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_banner_car_license_qrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_home_my_qrcode"
                android:drawableLeft="@drawable/ic_qrcode"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:paddingBottom="7dp"
                android:paddingLeft="6dp"
                android:paddingRight="13dp"
                android:paddingTop="7dp"
                android:text="我的二维码"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>