<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_default"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llt_article_category_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_list_item_click"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <View
            android:layout_width="4dp"
            android:layout_height="15dp"
            android:background="#4C88FF" />

        <TextView
            android:id="@+id/tv_article_category_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/ic_arrow_right_grey"
            android:text="雨季驾驶指南"
            android:textColor="#ff141414"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llt_article_category_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
</LinearLayout>