<?xml version="1.0" encoding="utf-8"?>
<com.vivi.asyncmvc.comm.view.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_image_manage_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:background="@drawable/ic_img_default"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_image_manage_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:src="@drawable/ic_delete_oval_red"
        android:visibility="visible" />

</com.vivi.asyncmvc.comm.view.SquareLayout>