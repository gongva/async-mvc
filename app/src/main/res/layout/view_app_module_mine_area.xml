<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_module_area_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:textColor="#ff141414"
            android:textSize="14sp"
            tools:text="驾驶证" />

        <LinearLayout
            android:id="@+id/llt_module_area_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llt_module_area_mine_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5" />

            <ImageView
                android:id="@+id/iv_module_area_mine_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_my_module_more" />

            <TextView
                android:id="@+id/tv_module_area_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:text="编辑"
                android:textColor="#ff4c88ff"
                android:textSize="14sp"
                app:bl_corners_radius="2dp"
                app:bl_pressed_solid_color="@color/btn_white_press"
                app:bl_stroke_color="#4C88FF"
                app:bl_stroke_width="1dp"
                app:bl_unPressed_solid_color="@color/white"
                tools:ignore="MissingPrefix" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llt_module_area_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
</LinearLayout>