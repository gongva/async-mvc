<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_address_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_list_item_click"
        android:elevation="10dp"
        android:gravity="center"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:text="+ 新增收货地址"
        android:textColor="#ff4e91f9"
        android:textSize="16sp" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/rfl_address_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_address_add">

        <ListView
            android:id="@+id/lv_address_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</RelativeLayout>